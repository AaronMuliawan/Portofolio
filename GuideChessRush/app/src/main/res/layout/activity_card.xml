<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/linear_card"
    android:layout_margin="5dp"
    android:padding="5dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="5dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="230dp"
            android:id="@+id/img_item_foto"
            android:scaleType="centerCrop"
            android:src="@color/colorAccent">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_item_name"
            android:layout_margin="16dp"
            android:layout_toRightOf="@id/img_item_foto"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/nama_detail">
        </TextView>
        <TextView
            android:id="@+id/tv_item_desc"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@id/txt_item_name"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/img_item_foto"
            android:layout_toRightOf="@id/img_item_foto"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="@string/desk">
        </TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>