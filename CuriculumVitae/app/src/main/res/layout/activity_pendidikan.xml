<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:orientation="horizontal"
    tools:context=".Pendidikan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/cardview_default_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/fototk"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/tk">
                </ImageView>
                <TextView
                    android:id="@+id/texttk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/fototk"
                    android:text="Tk Pertiwi"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background">
                </TextView>
                <TextView
                    android:id="@+id/desktk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/texttk"
                    android:layout_toRightOf="@id/fototk"
                    android:text="Sekolah TK Swasta yang berdiri pada tahun 1992"
                    android:textSize="15dp"
                    android:textStyle="bold">
                </TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/cardview_default_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/fotosd"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/sd">
                </ImageView>
                <TextView
                    android:id="@+id/textsd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/fotosd"
                    android:text="SDN Sukatani 7"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background">
                </TextView>
                <TextView
                    android:id="@+id/desksd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/textsd"
                    android:layout_toRightOf="@id/fotosd"
                    android:text="SD Negeri yang berdiri pada tahun 1985"
                    android:textSize="15dp"
                    android:textStyle="bold">
                </TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/cardview_default_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/fotosmp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/smp_tb">
                </ImageView>
                <TextView
                    android:id="@+id/textsmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/fotosmp"
                    android:text="SMP Taruna Bhakti"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background">
                </TextView>
                <TextView
                    android:id="@+id/desksmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/textsmp"
                    android:layout_toRightOf="@id/fotosmp"
                    android:text="@string/desksmp"
                    android:textSize="15dp"
                    android:textStyle="bold">
                </TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="510dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/cardview_default_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/fotosmk"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/smk_tb">
                </ImageView>
                <TextView
                    android:id="@+id/textsmk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/fotosmk"
                    android:text="SMK Taruna Bhakti"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background">
                </TextView>
                <TextView
                    android:id="@+id/desksmk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/textsmk"
                    android:layout_toRightOf="@id/fotosmk"
                    android:text="@string/desksmk"
                    android:textSize="15dp"
                    android:textStyle="bold">
                </TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>